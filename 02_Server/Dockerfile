# Використовуємо офіційний образ Node.js
FROM node:18

# Вказуємо директорію для нашого додатка
WORKDIR /app

# Копіюємо файли package.json та package-lock.json для інсталяції залежностей
COPY package*.json ./

# Встановлюємо залежності
RUN npm install

# Копіюємо весь код додатку в контейнер
COPY . .

# Відкриваємо порт для сервера
EXPOSE 3000

# Команда для запуску сервера
CMD ["npm", "start"]
